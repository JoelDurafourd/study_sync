<%= simple_form_for([@lesson, @booking], html: { class: 'booking-form' }) do |f| %>
  <div class="form-group">
    <%= f.label :start_date, "Start Date" %>
    <div class="input-group">
      <%= f.input :start_date, input_html: { class: 'form-control datepicker', id: 'booking_start_date' } %>
      <div class="input-group-append">
        <span class="input-group-text datetime-picker-icon"><i class="fa fa-calendar"></i></span>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :end_date, "End Date" %>
    <div class="input-group">
      <%= f.input :end_date, input_html: { class: 'form-control datepicker', id: 'booking_end_date' } %>
      <div class="input-group-append">
        <span class="input-group-text datetime-picker-icon"><i class="fa fa-calendar"></i></span>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit "Create Booking", class: "btn btn-primary col-12" %>
  </div>
<% end %>
