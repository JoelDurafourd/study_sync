<%# Calender function %>
<div class="lesson-form">
  <div class="booking-form-container">
    <%= simple_form_for([@lesson, @booking], html: { class: 'booking-form' }) do |f| %>
      <div class="form-group">
        <%= f.label :start_date, "Start Date", class: 'bold-label' %>
        <div class="input-group">
          <%= f.input :start_date, as: :string, input_html: { type: 'datetime-local', class: 'form-control datetimepicker', id: 'booking_start_date', min: Time.now.strftime("%Y-%m-%dT%H:%M") } %>
          <div class="input-group-append">
            <span class="input-group-text datetime-picker-icon"><i class="fa fa-calendar"></i></span>
          </div>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :end_date, "End Date", class: 'bold-label' %>
        <div class="input-group">
          <%= f.input :end_date, as: :string, input_html: { type: 'datetime-local', class: 'form-control datetimepicker', id: 'booking_end_date', min: Time.now.strftime("%Y-%m-%dT%H:%M") } %>
          <div class="input-group-append">
            <span class="input-group-text datetime-picker-icon"><i class="fa fa-calendar"></i></span>
          </div>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit "Create Booking", class: "btn btn-primary col-12" %>
      </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-center">
    <%= link_to "Back to lessons", lessons_path, class: "btn btn-secondary col-3" %>
  </div>
</div>
