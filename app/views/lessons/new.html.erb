<%= simple_form_for @lesson do |f| %>
  <%= f.input :category %>
  <%= f.input :description %>
  <%= f.input :title %>
  <%= f.input :price %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.submit  class: "nav-button col-12"%>
<% end %>
<%= link_to "Back to lessons", "/lessons", class: "nav-button col-12"%>
