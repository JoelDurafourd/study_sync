<!-- Carousel Section -->
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag('banner_image.jpg', alt: "First slide", class: "d-block w-100") %>
    </div>
    <div class="carousel-item">
      <%= image_tag('banner_img_slide2.jpg', alt: "Second slide", class: "d-block w-100") %>
    </div>
    <div class="carousel-item">
      <%= image_tag('banner_slide3.jpg', alt: "Third slide", class: "d-block w-100") %>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<!-- Search Bar Section -->
<div class="search-bar-container">
  <div class="search-bar">
    <%= form_with url: lessons_path, method: :get, class: "search-form" do %>
      <div class="search-input">
        <p><b>Search:</b></p>
        <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Type a tutor name, lessons, keywords" %>
      </div>
      <div class="search-category">
              <p><b>Categories:</b></p>
        <%= select_tag :category, options_for_select(['All Categories', 'Programming', 'Science', 'Mathematics', 'Music', 'Foreign Languages'], selected: params[:category]), class: "form-control" %>
      </div>
      <div class="search-button">
        <%= submit_tag "Search", name: "", class: "btn-search" %>
      </div>
    <% end %>
  </div>
</div>

<div class="categories-container">
  <div class="categories text-center">
    <h1>CATEGORIES</h1>
    <ul class="d-flex justify-content-center list-inline">
      <li class="list-inline-item">
        <%= image_tag('programming.png', alt: "programming", class: "category-icon programming") %>
        <span class="category-name">PROGRAMMING</span>
      </li>
      <li class="list-inline-item">
        <%= image_tag('science-logo.png', alt: "science-logo", class: "category-icon science-logo") %>
        <span class="category-name">SCIENCE</span>
      </li>
      <li class="list-inline-item">
        <%= image_tag('mathematics-logo.png', alt: "mathematics-logo", class: "category-icon mathematics-logo") %>
        <span class="category-name">MATHEMATICS</span>
      </li>
      <li class="list-inline-item">
        <%= image_tag('music-logo.png', alt: "music-logo", class: "category-icon music-logo") %>
        <span class="category-name">MUSIC</span>
      </li>
      <li class="list-inline-item">
        <%= image_tag('foreign-languages.png', alt: "foreign-languages", class: "category-icon foreign-languages") %>
        <span class="category-name">FOREIGN LANGUAGES</span>
      </li>
    </ul>
  </div>
</div>


<% if current_user && params[:query].present? == false && params[:category].present? == false %>
  <% if current_user.bookings.present? %>
    <% last_booking_category = current_user.bookings.last.lesson.category %>
    <% all_lessons = Lesson.all %>
    <% matching_lessons_by_category = all_lessons.select { |lesson| lesson.category == last_booking_category } %>

  <div class="recommendation-lesson">
    <h1>RECOMMENDATIONS</h1>
  <div class="card-container">

    <% matching_lessons_by_category.first(5).each do |lesson| %>
      <div class="card" style="width: 18rem;">
        <% if lesson.user.photo.present? %>
          <%= link_to cl_image_tag(lesson.user.photo.key, class: "card-img-top", alt: "User Avatar"), user_path(lesson.user) %>
        <% else %>
          <%= link_to image_tag("default_avatar.png", class: "card-img-top", alt: "Default Avatar"), user_path(lesson.user) %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><b><%= lesson.title %></b></h5>
          <p class="card-text">Category: <%= lesson.category %></p>
          <p class="card-text">Description: <%= lesson.description %></p>
          <p class="card-text">Price: <%= number_to_currency(lesson.price, {unit: '$', precision: 0}) %></p>
          <p class="card-text">User: <%= lesson.user.email %></p>
          <%= link_to "Go to Lesson", lesson_path(lesson), class: "btn btn-outline-warning rounded-pill" %>
        </div>
      </div>
    <% end %>
    <% end %>
  </div></div>
<% end %>

<div class="available-lesson">
  <h1>AVAILABLE LESSONS</h1>
<div class="card-container">
  <% if @lessons.empty? %>
    <h2>Sorry, no lessons match your search.</h2>
  <% else %>
      <% @lessons.each do |lesson| %>
          <div class="card" style="width: 18rem;">
          <% if lesson.user.photo.present? %>
            <%= link_to cl_image_tag(lesson.user.photo.key, class: "card-img-top", alt: "User Avatar"), user_path(lesson.user) %>
          <% else %>
            <%= link_to image_tag("default_avatar.png", class: "card-img-top", alt: "Default Avatar"), user_path(lesson.user) %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><b><%= lesson.title %></b></h5>
            <p class="card-text">Category: <%= lesson.category %></p>
            <p class="card-text">Description: <%= lesson.description %></p>
            <p class="card-text">Price: <%= number_to_currency(lesson.price, {unit: '$', precision: 0}) %></p>
            <p class="card-text">User: <%= lesson.user.email %></p>
            <%= link_to "Go to Lesson", lesson_path(lesson), class: "btn btn-outline-warning rounded-pill" %>
          </div>
        </div>
      <% end %>
  <% end %>
</div>
</div>

